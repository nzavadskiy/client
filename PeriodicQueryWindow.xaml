<Window x:Class="client.PeriodicQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Height="110" Width="150" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Height="40" TextAlignment="Center">Интервал, секунды</TextBlock>
        <TextBox Name="tbLat" TextWrapping="Wrap" PreviewTextInput="PreviewTextInput" DockPanel.Dock="Left" HorizontalAlignment="Right" Width="75" Margin="3,0,0,10"/>
        <Button Name="btnOK" Content="OK" HorizontalAlignment="Center" Click="BtnOK_Click" IsDefault="True" DockPanel.Dock="Right" Width="50" Margin="0,0,0,10"/>
    </DockPanel>
</Window>
